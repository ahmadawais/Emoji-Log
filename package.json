{
	"private": true,
	"name": "emoji-log",
	"version": "0.7.0",
	"description": "ğŸš€Emoji-Log â€” An Emoji Git commit log messages spec standard. [ ğŸ“¦ğŸ‘ŒğŸ›ğŸ“–ğŸš€âœ… ]",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ahmadawais/Emoji-Log.git"
	},
	"keywords": [
		"emoji",
		"Emoji log",
		"git commit",
		"git commit log"
	],
	"author": "Ahmad Awais (https://twitter.com/MrAhmadAwais/)",
	"license": "MIT",
	"devDependencies": {
		"@commitlint/cli": "^8.3.5",
		"commitlint-config-emoji-log": "^0.8.0",
		"husky": "^4.2.1",
		"lerna": "^3.20.2"
	},
	"commitlint": {
		"extends": [
			"emoji-log"
		]
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"scripts": {
		"log": "auto-changelog && git add . && git ci -m ' ğŸ“– DOC: Changelog' && git push",
		"release": "lerna publish --no-git-tag-version && release-it",
		"release-minor": "lerna publish && release-it minor",
		"release-major": "lerna publish && release-it major",
		"release-dry": "release-it --dry-run"
	},
	"auto-changelog": {
		"output": "CHANGELOG.md",
		"template": ".clTemplate.hbs",
		"commitLimit": false,
		"package": true,
		"replaceText": {
			"FIX: ": "",
			"NEW: ": "",
			"IMPROVE: ": "",
			"DOC: ": "",
			"BREAKING: ": ""
		}
	}
}
